#import colorama set to Fore text

from colorama import Fore 


#input name, age, & color selection
studentName = input("What is your name?:")

age = input("How old are you?:")

favColor = input("What is your favorite out of; red, green, yellow, blue, magenta, cyan, and white?:")

#output Color vairable text selection
if favColor == 'red':
  
  print(Fore.RED +"Welcome to CEIS150,", studentName,". So good to see you continuing your leaning journey at,", age,"!")

elif favColor == 'green':
  
  print (Fore.GREEN +"Welcome to CEIS150,", studentName,". So good to see you continuing your leaning journey at,", age,"!")

elif favColor == 'yellow':
  
  print (Fore.YELLOW +"Welcome to CEIS150,", studentName,". So good to see you continuing your leaning journey at,", age,"!")

elif favColor == 'blue':
   
  print (Fore.BLUE +"Welcome to CEIS150,", studentName,". So good to see you continuing your leaning journey at,", age,"!")

elif favColor == 'magenta':
 
  print (Fore.MAGENTA +"Welcome to CEIS150,", studentName,". So good to see you continuing your leaning journey at,", age,"!")

elif favColor == 'cyan':
  
  print (Fore.CYAN +"Welcome to CEIS150,", studentName,". So good to see you continuing your leaning journey at,", age,"!")

elif favColor == 'white':
  
  print (Fore.WHITE +"Welcome to CEIS150,", studentName,". So good to see you continuing your leaning journey at,", age,"!")
